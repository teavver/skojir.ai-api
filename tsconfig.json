{
    "compilerOptions": {
        "target": "ES2020",
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "sourceMap": true,
        "outDir": "dist",
        "pretty": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "src/utils/interfaces/**/*",
    ],
    "exclude": [
        "./node_modules"
    ]
}