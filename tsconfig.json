{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "dist",
        "pretty": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*",
        "src/utils/interfaces/**/*",
    ],
    "exclude": [
        "./node_modules"
    ]
}